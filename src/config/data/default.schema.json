{
  "env": {
    "doc": "The application environment.",
    "format": [
      "production",
      "development",
      "test",
      "lto"
    ],
    "default": "development",
    "env": "NODE_ENV"
  },
  "port": {
    "doc": "The port the application runs on.",
    "default": 80,
    "env": "PORT"
  },
  "anchor": {
    "doc": "The config of this application, with a namespace so it can be merged into larger configs",
    "api": {
      "secret": {
        "default": "lt1secretapikey!",
        "env": "ANCHOR_API_SECRET"
      }
    },
    "redis": {
      "url": {
        "default": "redis://localhost",
        "env": "ANCHOR_REDIS_URL"
      },
      "cluster": {
        "default": "",
        "env": "ANCHOR_REDIS_CLUSTER"
      }
    },
    "node": {
      "url": {
        "default": "",
        "env": "ANCHOR_NODE_URL"
      },
      "starting_block": 1,
      "restart_sync": false,
      "anchor_fee": 2500000
    },
    "monitor": {
      "interval": {
        "default": 10000,
        "env": "ANCHOR_MONITOR_INTERVAL"
      }
    },
    "logger": {
      "console": {
        "level": {
          "default": "info",
          "env": "ANCHOR_LOGGER_CONSOLE_LEVEL"
        }
      },
      "combined": {
        "level": {
          "default": "info",
          "env": "ANCHOR_LOGGER_COMBINED_LEVEL"
        }
      }
    }
  },
  "lto": {
    "doc": "Global config of the LTO node",
    "api": {
      "key": {
        "default": "",
        "env": "LTO_API_KEY"
      }
    },
    "node": {
      "url": {
        "default": "http://localhost:6869",
        "env": "LTO_NODE_URL"
      }
    }
  },
  "log": {
    "level": {
      "default": "",
      "env": "LOG_LEVEL"
    }
  }
}